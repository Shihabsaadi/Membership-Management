
@{
    ViewBag.Title = "Index";
    ViewBag.Header = "Dashboard";
    Layout = "~/Views/Shared/_MainContent.cshtml";
}

<section class="content" ng-app="myApp" ng-controller="insightsCtrl">
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-gradient-blue">
                <div class="inner">
                    <h3>{{OrganizationLists.length}}</h3>
                    <b>Organizations</b>
                </div>
                <div class="icon">
                    <i class="fas fa-building"></i>
                </div>
                <a href="#" class="small-box-footer">
                    @*More info <i class="fas fa-arrow-circle-right"></i>*@
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-gradient-green">
                <div class="inner">
                    <h3>{{allMembers.length}}</h3>
                    <b>Members</b>
                </div>
                <div class="icon">
                    <i class="fas fa-user"></i>
                </div>
                <a href="#" class="small-box-footer">

                </a>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-gradient-cyan">
                <div class="inner">
                    <h3>{{committeList.length}}</h3>
                    <b>Committees</b>
                </div>
                <div class="icon">
                    <i class="fas fa-users"></i>
                </div>
                <a href="#" class="small-box-footer">

                </a>
            </div>
        </div>
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-gradient-indigo">
                <div class="inner">
                    <h3>{{ServiceList.length}}</h3>
                    <b>Service</b>
                </div>
                <div class="icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <a href="#" class="small-box-footer">

                </a>
            </div>
        </div>
    </div>
</section>
@section Scripts
    {
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()
        });
    </script>
    <script src="~/scripts/Angular/appModul.js"></script>
    <script src="~/scripts/Angular/Member/MemberService.js"></script>
    <script src="~/scripts/Angular/Organization/OrganizationService.js"></script>
    <script src="~/scripts/Angular/Committee/CommitteeService.js"></script>
    <script src="~/scripts/Angular/Service/ServiceService.js"></script>
    <script src="~/scripts/Angular/Insights/InsightsController.js"></script>
}