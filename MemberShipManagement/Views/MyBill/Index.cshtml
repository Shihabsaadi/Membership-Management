
@{
    ViewBag.Title = "My Bill";
    ViewBag.TitleIcon = "transaction.png";
    ViewBag.NavbarBills = "active";
    Layout = "~/Views/Shared/_MainContent.cshtml";
}

<section class="content" ng-app="myApp" ng-controller="myBillCtrl">
    <div class="row">
        <div class="col-12">
            <div class="overlay d-flex justify-content-center align-items-center" ng-show="overlay==true">
                <i class="fas fa-2x fa-sync fa-spin"></i>
            </div>
            <div class="card card-gray-dark">
                <div class="card-header">
                    <h3 class="card-title">My Bill List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="table table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="1%">Sl</th>
                                    <th>Name</th>
                                    <th>Payment Date</th>
                                    <th width="1%">Paid&nbsp;Amount</th>
                                    <th width="1%">Bill</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in MyBillList | orderBy : '-Billing_Date'">
                                    <td>{{$index+1}}</td>
                                    <td>{{item.MemberName}}</td>
                                    <td>{{ToDate(item.Billing_Date)}}</td>
                                    <td class="text-center">{{item.Amount}}</td>
                                    <td>{{item.GetAmountToPay}}</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="float-right">
                            <b>Total Payment:</b> {{MyBillList[0].TotalPayment}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {

    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()
        });
    </script>
    <script src="~/scripts/Angular/appModul.js"></script>
    <script src="~/scripts/Angular/MyBill/MyBillService.js"></script>
    <script src="~/scripts/Angular/MyBill/MyBillController.js"></script>
}

